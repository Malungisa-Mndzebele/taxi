{
  "name": "taxi-app",
  "version": "1.0.0",
  "description": "A ride-sharing app similar to Uber",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"cd server && nodemon index.js\" \"cd web && npm run dev\"",
    "build": "cd web && npm run build",
    "client": "cd client && npm start",
    "server": "cd server && nodemon index.js",
    "web": "cd web && npm run dev",
    "test": "cd server && jest --runInBand",
    "test:watch": "cd server && jest --watch",
    "test:coverage": "cd server && jest --coverage",
    "install-all": "concurrently \"cd client && npm install\" \"cd server && npm install\" \"cd web && npm install\"",
    "dev-all": "npm run dev",
    "build-android": "echo 'Build script missing'",
    "build-ios": "echo 'Build script missing'",
    "build-all": "npm run build",
    "download": "open download.html",
    "prepare-release": "echo 'Release script missing'",
    "release": "npm run prepare-release && echo 'Release files ready in releases/ directory'",
    "build-simple": "npm run build",
    "create-download": "echo 'Script missing'",
    "build-mobile": "echo 'Script missing'",
    "create-mobile-app": "echo 'Script missing'",
    "setup-android": "echo 'Script missing'"
  },
  "keywords": [
    "ride-sharing",
    "taxi",
    "uber",
    "transportation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "express": "^5.1.0"
  }
}